@{
    ViewData["Title"] = "Main";
}

@await Html.PartialAsync("Partial/_Slider")

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Category</h2>
                    @await Html.PartialAsync("Partial/_Category")

                    @await Html.PartialAsync("Partial/_Brands")

                    @await Html.PartialAsync("Partial/_PriceRange")

                    <div class="shipping text-center">
                        <!--shipping-->
                        <img src="images/home/shipping.jpg" alt="" />
                    </div><!--/shipping-->

                </div>
            </div>

            <div class="col-sm-9 padding-right">
                @await Html.PartialAsync("Partial/_FeaturedItems")
            </div>
        </div>
    </div>
</section>