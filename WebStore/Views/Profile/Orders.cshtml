@model IEnumerable<UserOrderViewModel>
@{
    ViewData["Title"] = "Orders";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Total sum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
        <tr>
            <td>@order.Id</td>
            <td>@order.Name</td>
            <td>@order.Phone</td>
            <td>@order.Address</td>
            <td>$@order.TotalSum</td>
        </tr>   
        }
    </tbody>
</table>