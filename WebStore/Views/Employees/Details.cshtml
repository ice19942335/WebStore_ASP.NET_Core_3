@model WebStore.Models.EmployeeViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<hr />
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Patronymic</th>
            <th scope="col">Sure name</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null)
            {
                <tr>
                    <th scope="row">@Model.Id</th>
                    <td>@Model.FirstName</td>
                    <td>@Model.Patronymic</td>
                    <td>@Model.SureName</td>
                    <td>@Model.Age</td>
                </tr>
            }
        }
    </tbody>
</table>