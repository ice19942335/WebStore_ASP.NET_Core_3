@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-6 center-block" style="float: none;">
                <div class="login-form">
                    <!--login form-->
                    <h2>Login to your account</h2>
                    <form method="post" asp-area="" asp-controller="Account" asp-action="Login" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <span asp-validation-for="UserName" class="text-danger"></span>
                        <input asp-for="UserName" placeholder="Username" />

                        <span asp-validation-for="Password" class="text-danger"></span>
                        <input asp-for="Password" placeholder="Password" />

                        <span>
                            <input asp-for="RememberMe" class="checkbox">
                            Remember me
                        </span>
                        <button type="submit" class="btn btn-default">LogIn</button>
                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section><!--/form-->