@model RegisterUserViewModel
@{
    ViewData["Title"] = "Register";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-6 center-block" style="float: none;">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>New User SignUp!</h2>
                    <form method="post" asp-area="" asp-controller="Account" asp-action="Register" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <span asp-validation-for="UserName" class="text-danger"></span>
                        <input asp-for="UserName" placeholder="Username" />

                        <span asp-validation-for="Password" class="text-danger"></span>
                        <input asp-for="Password" placeholder="Password" />
                        
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <input asp-for="ConfirmPassword" placeholder="Confirm password" />

                        <button type="submit" class="btn btn-default">SignUp</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->